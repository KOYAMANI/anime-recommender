{
    "family": "webserver",
    "executionRoleArn": "<EXECUTION_ROLE_ARN>",
    "taskRoleArn": "<TASK_ROLE_ARN>",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "webserver",
        "image": "<IMAGE>",
        "portMappings": [
          {
            "containerPort": 8080,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "FLASK_ENV",
            "value": "production"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "anime-recommender-backend-log",
            "awslogs-region": "eu-central-1",
            "awslogs-stream-prefix": "webserver"
          }
        }
      }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "2GB"
  }
  
