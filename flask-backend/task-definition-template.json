{
    "family": "backend-task",
    "executionRoleArn": "<EXECUTION_ROLE_ARN>",
    "taskRoleArn": "<TASK_ROLE_ARN>",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "backend-task",
        "image": "<IMAGE>",
        "portMappings": [
          {
            "containerPort": 8080,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "FLASK_DEBUG",
            "value": false
          }
        ],
        "secrets": [
          {
            "name": "MAL_API_URL",
            "valueFrom": "arn:aws:secretsmanager:eu-central-1:588729807438:secret:anime-recommender/backend-LUaLJ1"
          },
          {
            "name": "X_MAL_CLIENT_ID",
            "valueFrom": "arn:aws:secretsmanager:eu-central-1:588729807438:secret:anime-recommender/backend-LUaLJ1"
          },
          {
            "name": "SQLALCHEMY_DATABASE_URI_PROD",
            "valueFrom": "arn:aws:secretsmanager:eu-central-1:588729807438:secret:anime-recommender/backend-LUaLJ1"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "anime-recommender-backend-log",
            "awslogs-region": "eu-central-1",
            "awslogs-stream-prefix": "backend-task"
          }
        }
      }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "2GB"
  }
  
